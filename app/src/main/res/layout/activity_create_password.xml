<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".UI.CreatePasswordActivity">


    <Button
        android:id="@+id/button0n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="75dp"
        android:text="0"
        android:background="@color/purple_700"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button7n" />

    <EditText
        android:id="@+id/newPasswordPlainText"
        android:layout_width="124dp"
        android:layout_height="41dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="New password"
        android:inputType="textPersonName"
        android:maxLength="4"
        android:textColor="#FFFFFF"
        android:textColorHint="#7863D6"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button2n"
        app:layout_constraintEnd_toStartOf="@+id/button3n"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1n"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="50dp"
        android:background="@color/purple_700"
        android:fontFamily="@font/montserrat_semibold"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/button2n"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:text="2"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintBottom_toTopOf="@+id/button5n"
        app:layout_constraintStart_toEndOf="@+id/button1n" />

    <Button
        android:id="@+id/button3n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="50dp"
        android:text="3"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button2n"
        app:layout_constraintTop_toTopOf="@+id/button1n" />

    <Button
        android:id="@+id/button4n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:text="4"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintBottom_toTopOf="@+id/button7n"
        app:layout_constraintStart_toStartOf="@+id/button1n" />

    <Button
        android:id="@+id/button5n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:text="5"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintStart_toEndOf="@+id/button4n"
        app:layout_constraintTop_toTopOf="@+id/button4n" />

    <Button
        android:id="@+id/button6n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:text="6"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintEnd_toEndOf="@+id/button3n"
        app:layout_constraintStart_toEndOf="@+id/button5n"
        app:layout_constraintTop_toTopOf="@+id/button5n" />

    <Button
        android:id="@+id/button7n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:text="7"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintBottom_toTopOf="@+id/button0n"
        app:layout_constraintStart_toStartOf="@+id/button4n" />

    <Button
        android:id="@+id/button8n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:text="8"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/button7n"
        app:layout_constraintTop_toTopOf="@+id/button7n" />

    <Button
        android:id="@+id/button9n"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:text="9"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/button3n"
        app:layout_constraintStart_toEndOf="@+id/button8n"
        app:layout_constraintTop_toTopOf="@+id/button8n" />
    <Button
        android:id="@+id/emptyButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="+"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/newPasswordPlainText"
        app:layout_constraintStart_toEndOf="@+id/newPasswordPlainText"
        app:layout_constraintTop_toTopOf="@+id/newPasswordPlainText" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="x"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/newPasswordPlainText"
        app:layout_constraintEnd_toStartOf="@+id/newPasswordPlainText"
        app:layout_constraintTop_toTopOf="@+id/newPasswordPlainText" />

</android.support.constraint.ConstraintLayout>